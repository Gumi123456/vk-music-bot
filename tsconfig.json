{
  "compilerOptions": {
    "target": "es2021",
    "module": "esnext",
    "rootDir": "./src",
    "moduleResolution": "node",
    "lib": ["esnext"],
    "types": ["node"],
    "resolveJsonModule": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true
    // "baseUrl": "./src"
    // "paths": {
    //   "@modules/*": ["modules/*"],
    //   "@interactions/*": ["interactions/*"],
    //   "@helpers/*": ["helpers/*"],
    //   "@apis/*": ["apis/"],
    //   "@events/*": ["events/*"]
    // }
  },
  "exclude": ["dist", "node_modules"]
}
